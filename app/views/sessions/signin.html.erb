<div class="row">
  <div class="col-md-12 offset-md-2">
    <h3>Admin SignIn</h3>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card bg-dark text-white">

          <%= form_for(:sessions, html:{class: 'col-md-8 offset-md-2 margin2'}) do |i| %>

            <div class="mb-2">
                <%= i.label :email, class:'form-label' %>
                <%= i.text_field :email, class:"form-control" %>
            </div>

            <div class="mb-2">
                <%= i.label :password, class:'form-label' %>
                <%= i.text_field :password, class:"form-control" %>
            </div>

            <div class="col-md-8">  
              <%= i.button 'Login', class:"btn btn-primary" %>
            </div>

          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>